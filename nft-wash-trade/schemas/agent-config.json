{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://github.com/forta-protocol/forta-agent-templates/nft-wash-trade/schemas/agent-config.json",
    "type": "object",
    "title": "Nft Wash Trade Agent Config",
    "description": "Agent configuration file to monitor wash trades of a specific NFT collection on specified exchange.",
    "required": [
        "nftCollectionName",
        "nftCollectionAddress",
        "nftExchangeName"
    ],
    "properties": {
        "nftCollectionName": {
            "type": "string",
            "description": "Name of the NFT Collection to monitor"
        },
        "nftCollectionAddress": {
            "type": "string",
            "description": "NFT Collection Smart Contract Address to monitor transfers"
        },
        "nftExchangeName": {
            "type": "string",
            "description": "NFT Exchange to monitor trades",
            "enum": [
                "LooksRare",
                "OpenSea"
            ]
        }
    },
    "additionalProperties": true
}
